<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="backgroundPane" stylesheets="@../css/gameSettings.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameSettingsMenu">
   <ImageView fitHeight="79.0" fitWidth="98.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backToMainMenu" pickOnBounds="true" preserveRatio="true" styleClass="back-button">
