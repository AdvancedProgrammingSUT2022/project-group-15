         <Button fx:id="startGameButton" mnemonicParsing="false" onMouseClicked="#startGameWithFriend" prefHeight="162.0" prefWidth="651.0" styleClass="network-button" text="start game" textFill="WHITE">
            <font>
               <Font name="Impact" size="70.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="findGameButton" mnemonicParsing="false" onMouseClicked="#findGame" prefHeight="162.0" prefWidth="634.0" styleClass="network-button" text="find a game" textFill="WHITE">
            <font>
               <Font name="Impact" size="70.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </children>
   </HBox>
   <ChoiceBox fx:id="numberOfPlayersBox" layoutX="1007.0" layoutY="348.0" prefHeight="26.0" prefWidth="96.0" />
   <Label layoutX="750.0" layoutY="338.0" styleClass="label-info" text="number of players :">
      <font>
         <Font size="25.0" />
      </font>
   </Label>
   <Label layoutX="62.0" layoutY="338.0" styleClass="label-info" text="enter friends username" />
   <TextField fx:id="usernameTextField" layoutX="376.0" layoutY="347.0" />
   <VBox fx:id="friendsInGame" alignment="TOP_CENTER" layoutX="172.0" layoutY="395.0" prefHeight="200.0" prefWidth="318.0">
