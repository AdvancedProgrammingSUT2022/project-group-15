<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="backgroundPane" stylesheets="@../css/mainMenu.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameMenu">
   <ImageView fitHeight="79.0" fitWidth="98.0" layoutX="14.0" layoutY="14.0"  pickOnBounds="true" preserveRatio="true" styleClass="back-button">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <Image url="@../icons/back-icon.png" />
   </ImageView>
   <VBox alignment="CENTER" layoutX="369.0" layoutY="290.0" prefHeight="380.0" prefWidth="543.0">
      <Button mnemonicParsing="false"  prefHeight="153.0" prefWidth="449.0" styleClass="start-new-game" text="New Game" textFill="WHITE">
         <font>
            <Font name="Impact" size="80.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="scoreBoardButton" mnemonicParsing="false"  prefHeight="80.0" prefWidth="408.0" styleClass="score-board" text="Score Board" textFill="WHITE">
         <font>
            <Font name="Impact" size="64.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="profileButton" mnemonicParsing="false"  prefHeight="89.0" prefWidth="268.0" styleClass="profile" text="Profile" textFill="WHITE">
         <font>
            <Font name="Impact" size="60.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </VBox>
</AnchorPane>
